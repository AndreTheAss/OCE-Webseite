FROM php:8.2-apache

# Systempakete
RUN apt-get update && apt-get install -y --no-install-recommends \
    libjpeg62-turbo-dev libpng-dev libfreetype6-dev \
    libzip-dev zlib1g-dev libicu-dev libxml2-dev \
    imagemagick libmagickwand-dev libonig-dev \
    libcurl4-openssl-dev libssl-dev libsodium-dev \
    unzip ca-certificates curl && rm -rf /var/lib/apt/lists/*

# Apache-Module
RUN a2enmod rewrite headers

# PHP-Erweiterungen f√ºr WordPress
RUN docker-php-ext-configure gd --with-freetype --with-jpeg \
 && docker-php-ext-install -j$(nproc) \
    gd mysqli pdo_mysql zip intl exif mbstring opcache dom xml simplexml fileinfo sodium

# Imagick via PECL
RUN pecl install imagick && docker-php-ext-enable imagick

# PHP- und Apache-Feintuning
COPY php.ini /usr/local/etc/php/conf.d/zz-wp.ini
RUN printf "\n<Directory /var/www/html>\n    AllowOverride All\n    Require all granted\n    Options -Indexes +FollowSymLinks\n</Directory>\n" \
    > /etc/apache2/conf-available/wp.conf && a2enconf wp
